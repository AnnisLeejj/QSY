<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#eb6024" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:bottom="3px">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:endColor="#80eb6024"
                android:startColor="#80eb6024" />

            <padding
                android:bottom="8dp"
                android:left="5dp"
                android:right="5dp"
                android:top="8dp" />

            <corners android:radius="6dp" />
        </shape>
    </item>

</layer-list>
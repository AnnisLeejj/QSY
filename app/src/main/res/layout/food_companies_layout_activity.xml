<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".activit.ConvenienceService.BSZNActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#3cafdf" >

        <TextView
            android:id="@+id/textview01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="食品/餐饮企业"
            android:textColor="#ffffff"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:drawableRight="@drawable/return_button"
            android:gravity="center" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/area_text_view_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                 android:id="@+id/area_text_view_button_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="全部区域"
                android:textColor="#808080" />

            <TextView
                android:id="@+id/area_text_view_button_img"
                android:layout_width="12.5dp"
                android:layout_height="7dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:background="?attr/firm_iamge" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/firm_text_view_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/firm_text_view_button_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="全部企业"
                android:textColor="#808080" />

            <TextView
                android:id="@+id/firm_text_view_button_img"
                android:layout_width="12.5dp"
                android:layout_height="7dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="?attr/firm_iamge" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/level_text_view_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/level_text_view_button_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="全部等级"
                android:textColor="#808080" />

            <TextView
                android:id="@+id/level_text_view_button_img"
                android:layout_width="12.5dp"
                android:layout_height="7dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:background="?attr/firm_iamge" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?attr/appheadbackground" />
	<android.support.v4.widget.SwipeRefreshLayout
		android:id="@+id/srl"
  		android:layout_width="match_parent"
        android:layout_height="match_parent"
		>  
    <ListView
        android:id="@+id/food_listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="#f2f2f2"
        android:dividerHeight="0.5dp" >
    </ListView>
  </android.support.v4.widget.SwipeRefreshLayout> 
    
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="分享"
        android:textColor="#333333"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f2f2f2" />

    <LinearLayout
        android:id="@+id/share_layout_purposed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/share_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/share_sdk_qq_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ssdk_oks_classic_qq"
                android:gravity="center"
                android:text="QQ"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/share_sdk_xinlangweibo_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ssdk_oks_classic_sinaweibo"
                android:gravity="center"
                android:text="新浪微博"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/share_sdk_weixinhaoyou_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ssdk_oks_classic_wechat"
                android:gravity="center"
                android:text="微信好友"
                android:textColor="#000000" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

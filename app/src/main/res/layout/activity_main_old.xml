<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_relative"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <FrameLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >
        </FrameLayout>

        <TextView
            android:id="@+id/zhu_ti"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="16dp"
            android:background="?attr/theme_back"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#afafaf" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/home_img"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="?attr/home_button_h" />

            <TextView
                android:id="@+id/home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="首页"
                android:textColor="#afafaf"
                android:textSize="12sp" />
        </LinearLayout>
      
        
        <LinearLayout
            android:id="@+id/convenient_server"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/server_img"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="?attr/convenient_server_button_h" />

            <TextView
                android:id="@+id/server_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="便民服务"
                android:textColor="#afafaf"
                android:textSize="12sp" />
        </LinearLayout>

 
        <LinearLayout
            android:id="@+id/personal_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/personal_img"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="?attr/personal_center_h" />

            <TextView
                android:id="@+id/personal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="个人中心"
                android:textColor="#afafaf"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>